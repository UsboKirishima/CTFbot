{
    "compilerOptions": {
        "target": "es6",
        "module": "commonjs",
        "strict": true,
        "noImplicitAny": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "outDir": "./dist",
        "rootDir": "./",
        "sourceMap": true,
        "removeComments": true,
        "typeRoots": ["./node_modules/@types", "./typings"]
    },
    "include": [
        "./**/*.ts", "./**/*.d.ts" 
    ],
    "exclude": [
        "node_modules"
    ]
}